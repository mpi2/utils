    <build>
	 <defaultGoal>install</defaultGoal>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            
            <resource> <!--do not distribute documentation -->
                <directory>docs</directory>
                <excludes>
                    <exclude>**</exclude> 
                </excludes>
            </resource>
        </resources>
        
        <plugins>
            
            <plugin> <!-- for each build, remove the logs for test and execution -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>auto-clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>test_logs</directory>
                        </fileset>
                        <fileset>
                            <directory>exec_logs</directory>
                        </fileset>
                        <fileset>
                            <directory>test_data</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

	  <plugin>
                <!--
                mvn license:check
                mvn license:format
                -->
                <inherited>false</inherited>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.10.b1</version>
                <configuration>
                    <header>conf/header.txt</header>
                    <strictCheck>true</strictCheck>
                    <failIfMissing>true</failIfMissing>
                    <aggregate>true</aggregate>
                    <properties>
                        <year>2013</year>
                        <developer>Julian Atienza Herrero</developer>
                        <email>j.atienza at har.mrc.ac.uk</email>
                    </properties>
                    <excludes>
                        <exclude>**/src/main/generated/**</exclude>
                        <exclude>**/src/test/generated/**</exclude>
                        <exclude>**/data/**</exclude>
                        <exclude>**/conf/**</exclude>
                        <exclude>**/docs/**</exclude>
                        <exclude>**/*.properties</exclude>
                        <exclude>**/*.script</exclude>
                        <exclude>**/*.xjb</exclude>
                        <exclude>**/*.log</exclude>
                        <exclude>**/*.txt</exclude>
                        <exclude>**/resolver.xsd</exclude>
                        <exclude>**/*.dat</exclude>
                        <exclude>**/*.ftp</exclude>
                        <exclude>**/*.ws</exclude>
                        <exclude>**/*.rpt</exclude>
                        <exclude>**/*.Logger</exclude>
                        <exclude>**/*.lck</exclude>
                        <exclude>**/*.tgz</exclude>
                        <exclude>**/*.ctrl</exclude>
                        <exclude>**/*.lsql</exclude>
                        <exclude>**/*.wsdl</exclude>
                        <exclude>**/*.tmp</exclude>
                        <exclude>**/*.json</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <id>check-headers</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin> 


        </plugins>

    </build>
    
      
